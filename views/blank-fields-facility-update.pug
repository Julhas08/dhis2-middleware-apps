html
    head
      meta(charset='UTF-8')
      title DHIS2 Middleware Apps
      link(rel='stylesheet', href='/stylesheets/bootstrap.min.css') 
      link(rel='stylesheet', href='/stylesheets/style.css')    
      script(type='text/javascript' src='/javascripts/jquery-3.2.1.min.js')    
      script(type='text/javascript' src='/javascripts/bootstrap.min.js')   
        
    body
        div
        include ./header.pug 
        .main-area
          .col-md-12.col-xs-12.col-lg-12.right-sidebar.padding-left-right-zero
            .col-md-12.col-xs-12.col-lg-12.col-sm-12.padding-box-columing
              .panel.panel-white
                .panel-heading.clearfix
                  h3.panel-title Update Facility Information
                .panel-body
                  .container
                    .row.centered-form
                      .col-xs-12.col-sm-10.col-md-10.col-sm-offset-8.col-md-offset-8
                        .panel.panel-default
                          .panel-heading
                            h3.panel-title
                              | Please enter the below information 
                          .panel-body
                            form
                                .form-group
                                  input#facilityName.form-control.input-sm(type='text', name='facilityName', 
                                  value='#{code}', placeholder='Facility Name(*)')

                                .row
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#code.form-control.input-sm(type='text', name='code', placeholder='Code')
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#description.form-control.input-sm(type='text', name='description', placeholder='Description') 
                                .row
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#closeDate.form-control.input-sm(type='text', name='closeDate', placeholder='Closed Date')
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#comment.form-control.input-sm(type='text', name='comment', placeholder='Comment')        
                                
                                .row
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#url.form-control.input-sm(type='text', name='url', placeholder='URL')
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#contactPerson.form-control.input-sm(type='text', name='contactPerson', placeholder='Contact Person')
                                .row
                                  .col-xs-12.col-sm-12.col-md-12
                                    .form-group
                                      input#address.form-control.input-sm(type='text', name='address', placeholder='Address')
                                  
                                .row
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#email.form-control.input-sm(type='text', name='email', placeholder='Email')
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#phoneNumber.form-control.input-sm(type='text', name='phoneNumber', placeholder='Phone Number')
                                   
                                .row
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#latitude.form-control.input-sm(type='text', name='latitude', placeholder='Latitude')
                                  .col-xs-6.col-sm-6.col-md-6
                                    .form-group
                                      input#longitude.form-control.input-sm(type='text', name='longitude', placeholder='Longitude')     

                                br
                                button.btn.btn-info.btn-block.blank-facility-info-update-btn(type='submit' ) Update Facility Information

        
    
