html
    head
      meta(charset='UTF-8')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title DHIS2 Middleware Apps || Transaction Mode Setting
      link(rel='stylesheet', href='/stylesheets/bootstrap.min.css') 
      link(rel='stylesheet', href='/stylesheets/style.css')    
      script(type='text/javascript' src='/javascripts/jquery-3.2.1.min.js')    
      script(type='text/javascript' src='/javascripts/bootstrap.min.js')  
        
    body
        div
        include ./header.pug 
        .main-area
          .col-md-12.col-xs-12.col-lg-12.right-sidebar.padding-left-right-zero
            .col-md-12.col-xs-12.col-lg-12.col-sm-12.padding-box-columing
              .panel.panel-white
                .panel-heading.clearfix
                  h3.panel-title Data Exchange Mode (Persistent / Automatic) 
                .panel-body
                  .container
                    .row.centered-form
                      .col-xs-12.col-sm-10.col-md-10.col-sm-offset-8.col-md-offset-8
                        .panel.panel-default
                          .panel-heading
                            h3.panel-title
                              | Exchange Mode >> Persistent-App based operation (Off State) || Automatic(On State)
                          .panel-body
                            form
                              table(class="table table-bordered table-hover table-header-bg")
                                thead(class="table-header-bg thead")
                                  tr
                                    th Mode Type
                                    th Change Mode
                                    th Sync Time Every
                                    th Auto Sync Status 
                                    th Action

                                tbody        
                                  each api, i in resultInfo
                                    if(api.mode_type == 1)
                                      tr
                                      td= "Automatic"    
                                      td 
                                        each info in resultInfo 
                                          if(info.mode_type==0)           
                                            label.switch
                                              input(type='checkbox',id='isEnableSynMode')
                                              span.slider.round  
                                            
                                          if(info.mode_type==1)
                                            label.switch
                                              input(type='checkbox',id='isEnableSynMode', checked='')
                                              span.slider.round        
                                      td= api.sync_period       
                                      td 
                                        each info in resultInfo 
                                          if(info.sync_status==0)           
                                            label.switch
                                              input(type='checkbox',id='autoSyncStatus')
                                              span.slider.round  
                                            
                                          if(info.sync_status==1)
                                            label.switch
                                              input(type='checkbox',id='autoSyncStatus', checked='')
                                              span.slider.round  
                                      td
                                        button(class="btn btn-danger btn-small delete-settings", id="delete-settings"+api.id, type="button", value=api.id+"_syncMode") Delete 
                                    else 
                                      tr
                                      td= "Persistent"    
                                      td 
                                        each info in resultInfo 
                                          if(info.mode_type==0)           
                                            label.switch
                                              input(type='checkbox',id='isEnableSynMode')
                                              span.slider.round  
                                            
                                          if(info.mode_type==1)
                                            label.switch
                                              input(type='checkbox',id='isEnableSynMode', checked='')
                                              span.slider.round        
                                      td= api.sync_period       
                                      td 
                                        each info in resultInfo 
                                          if(info.sync_status==0)           
                                            label.switch
                                              input(type='checkbox',id='autoSyncStatus')
                                              span.slider.round  
                                            
                                          if(info.sync_status==1)
                                            label.switch
                                              input(type='checkbox',id='autoSyncStatus', checked='')
                                              span.slider.round  
                                      td
                                        button(class="btn btn-danger btn-small delete-settings", id="delete-settings"+api.id, type="button", value=api.id+"_syncMode") Delete                            
                        .panel.panel-default
                          .panel-heading
                            h3.panel-title
                              | Add new exchange mode
                            
                          .panel-body
                            form
                              table(class="table table-bordered table-hover table-header-bg")
                                  thead(class="table-header-bg thead")
                                    
                                  tbody        
                                    tr
                                      td= "Exchange Mode"
                                      td
                                        .col-xs-8.col-sm-8.col-md-8
                                          .form-group-sync-mode
                                            select.form-control(id="exchangeMode", name="exchangeMode")
                                              option(value="") Select exchange mode type
                                              option(value="0") Persistent (App Based)
                                              option(value="1") Automatic
                                    tr
                                      td= "Exchange Mode State"
                                      td
                                        .col-xs-6.col-sm-6.col-md-6
                                          .form-group-sync-mode
                                            label.switch                  
                                              input(type='checkbox',id='exchangeModeStatus', checked='')
                                              span.slider.round
                                    tr
                                      td= "Auto Sync On/Off"
                                      td
                                        .col-xs-6.col-sm-6.col-md-6
                                          .form-group-sync-mode
                                            label.switch                  
                                              input(type='checkbox',id='autoSyncStatus', checked='')
                                              span.slider.round  
                                    tr
                                      td= "Auto Sync Timing"
                                      td 
                                        .col-xs-8.col-sm-8.col-md-8
                                          .form-group-sync-mode
                                            select.form-control(id="autoSyncTime", name="autoSyncTime")
                                              option(value="") Select Auto Sync Timing
                                              option(value="1m") Every minute
                                              option(value="5m") Every 5 mins
                                              option(value="10m") Every 10 mins
                                              option(value="25m") Every 15 mins
                                              option(value="20m") Every 20 mins
                                              option(value="30m") Every 30 mins
                                              option(value="60m") Every 60 mins
                                              option(value="2h") Every 2 hour's
                                              option(value="3h") Every 3 hour's
                                              option(value="4h") Every 4 hour's
                                              option(value="5h") Every 5 hour's
                                              option(value="6h") Every 6 hour's 
                              .row  
                                .col-xs-12.col-sm-12.col-md-12        
                                  .form-group
                                    input#notes.form-control.input-sm(type='text', name='notes', placeholder='Notes')  
                                    <br>  
                                    button(class="btn btn-info btn-small hover-ponter", id="create-exchange-mode", type="button") Create   

