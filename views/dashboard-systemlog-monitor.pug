html
    head
      link(rel='stylesheet', href='/stylesheets/style.css')  
      script(src='https://code.highcharts.com/highcharts.js')
      script(src='https://code.highcharts.com/modules/series-label.js')
      script(src='https://code.highcharts.com/modules/exporting.js') 
        
    body
        div
        #scheduleMonitorChartcontainer
        script.
            Highcharts.chart('scheduleMonitorChartcontainer', {

                title: {
                    text: 'Middleware Schedular Operation Summary'
                },

                yAxis: {
                    title: {
                        text: 'Number of facilities'
                    }
                },
                
                legend: {
                    align: 'center',
                    verticalAlign: 'bottom',
                    enabled: true,
                    floating: false
                },

                credits: {
                    enabled: false
                },

                plotOptions: {
                    spline: {
                        marker: {
                            enabled: true
                        }
                    },
                    series: {
                        label: {
                            connectorAllowed: false
                        },
                        pointStart: 1
                    }
                },

                series: [{
                    name: 'Created Facilities',
                    data: [10, 3, 6, 9],
                    //pointStart: ['2018-02-17','2018-02-18','2018-02-19','2018-02-20']
                }, {
                    name: 'Updated Facilities',
                    data: [2, 12, 10, 5]
                }, {
                    name: 'Deleted Facilites',
                    data: [5, 3, 2, 5]
                }],

                responsive: {
                    rules: [{
                        condition: {
                            maxWidth: 500
                        },
                        chartOptions: {
                            legend: {
                                layout: 'horizontal',
                                align: 'center',
                                verticalAlign: 'bottom'
                            }
                        }
                    }]
                }

            });