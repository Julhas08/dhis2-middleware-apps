.main-area
  .col-md-12.col-xs-12.col-lg-12.right-sidebar.padding-left-right-zero
    .col-md-12.col-xs-12.col-lg-12.col-sm-12.padding-box-columing
      .panel.panel-white
        .panel-heading.clearfix
          h3.panel-title Auto data syncronization settings 
        .panel-body
          .container
            .row.centered-form
              .col-xs-12.col-sm-10.col-md-10.col-sm-offset-8.col-md-offset-8
                .panel.panel-default
                  .panel-heading
                    h3.panel-title
                      | Schedular On/ Off
                    
                  .panel-body
                    form
                      .row
                        .col-xs-6.col-sm-6.col-md-6
                          .form-group
                          each info in cronJobInfo 
                            if(info.is_enable==0)                                       
                              label.switch
                                input(type='checkbox',id='is_enable')
                                span.slider.round  
                              
                            if(info.is_enable==1)
                              label.switch
                                input(type='checkbox',id='is_enable', checked='')
                                span.slider.round                               
                        
                .panel.panel-default
                  .panel-heading
                    h3.panel-title
                      | Please enter the below information for setting the schedular
                  .panel-body
                    form
                      .row
                        .col-xs-6.col-sm-6.col-md-6
                          .form-group
                            input#name.form-control.input-sm(type='text', name='name', placeholder='Cron Job Name')
                        .col-xs-6.col-sm-6.col-md-6
                          .form-group
                            input#short_code.form-control.input-sm(type='text', name='short_code', placeholder='Short Code')
                      .row
                        .col-xs-6.col-sm-6.col-md-6
                          .form-group
                            select.form-control(id="schedular_type", name="schedular_type")
                              option(value="") Select Schedular Type
                              option(value="hourly") Hourly 
                              option(value="daily") Daily 
                              option(value="midday") Mid day 
                              option(value="midnight") Midnight 
                              option(value="weekly") Weekly
                              option(value="monthly") Monthly

                        .col-xs-6.col-sm-6.col-md-6
                          .form-group
                            input#minutes.form-control.input-sm(type='number', name='minutes', placeholder='Minute (range: 0-59)')
                        
                      .row
                        .col-xs-6.col-sm-6.col-md-6
                          .form-group
                            input#hours.form-control.input-sm(type='number', name='hours', placeholder='Hour (range: 0-23)')
                        .col-xs-6.col-sm-6.col-md-6
                          .form-group
                            input#dayOfMonth.form-control.input-sm(type='number', name='dayOfMonth', placeholder='Day of the Month (range: 1-31)')  
                      .row
                        .col-xs-6.col-sm-6.col-md-6
                          .form-group
                            input#monthOfYear.form-control.input-sm(type='number', name='monthOfYear', placeholder='Month of the Year (range: 1-12)')
                        .col-xs-6.col-sm-6.col-md-6
                          .form-group
                            input#dayOfWeek.form-control.input-sm(type='number', name='dayOfWeek', placeholder='Day of the Week   (range: 1-7, 1 standing for Monday)')            
                      
                      .form-group
                        input#notes.form-control.input-sm(type='text', name='notes', placeholder='Write notes')
                      
                        button.btn.btn-info.btn-block.schedular-settings-btn(type='submit' ) Register Now!

        table(class="table table-bordered table-hover table-header-bg")
          thead(class="table-header-bg thead")
            tr
              th Name
              th Short Code
              th Enable/Disable
              th Schedular Type
              th Start Time (Minute)
              th Hour
              th Day of Month
              th Created Date
              th Action

          tbody        
            each api, i in cronJobInfo
              tr
                td= api.name   
                td= api.short_code   
                td= api.is_enable   
                td= api.schedular_type   
                td= api.minutes   
                td= api.hours   
                td= api.dayOfMonth      
                td= api.created_at

